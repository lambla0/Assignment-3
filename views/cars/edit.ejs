<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Car</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>

<body class="d-flex flex-column min-vh-100">
  <!-- Include navbar at top of page -->
  <%- include('../partials/navbar') %>

  <main class="container mt-4 mb-4">

    <!-- Back Button to Car List -->
    <div class="mb-3">
      <a href="/cars" class="btn btn-outline-secondary">&larr; Back to Cars</a>
    </div>

    <!-- Page title -->
    <h1 class="text-center mb-4 fw-bold">Edit Car</h1>

    <!-- Form container with styling -->
    <div class="container-card">
      <!-- Edit Car Form -->
      <form action="/cars/<%= car._id %>" method="POST">

        <!-- Make input -->
        <div class="mb-3">
          <label class="form-label">Make</label>
          <input type="text" name="make" class="form-control" value="<%= car.make %>" required>
        </div>

        <!-- Model input -->
        <div class="mb-3">
          <label class="form-label">Model</label>
          <input type="text" name="model" class="form-control" value="<%= car.model %>" required>
        </div>

        <!-- Year input -->
        <div class="mb-3">
          <label class="form-label">Year</label>
          <input type="number" name="year" class="form-control" value="<%= car.year %>" required>
        </div>

        <!-- Price per Day input -->
        <div class="mb-3">
          <label class="form-label">Price per Day</label>
          <input type="number" name="pricePerDay" class="form-control" value="<%= car.pricePerDay %>" required>
        </div>

        <!-- Status dropdown -->
        <div class="mb-3">
          <label class="form-label">Status</label>
          <select name="status" class="form-select">
            <option value="available" <%= car.status === 'available' ? 'selected' : '' %>>Available</option>
            <option value="rented" <%= car.status === 'rented' ? 'selected' : '' %>>Rented</option>
            <option value="maintenance" <%= car.status === 'maintenance' ? 'selected' : '' %>>Maintenance</option>
          </select>
        </div>

        <!-- Form buttons -->
        <button type="submit" class="btn btn-success">Update Car</button>
        <a href="/cars" class="btn btn-secondary">Cancel</a>

      </form>
    </div>
  </main>

  <!-- Include footer at bottom -->
  <%- include('../partials/footer') %>

  <!-- Bootstrap JS bundle for interactive components -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>






