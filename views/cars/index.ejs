<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Car Inventory</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>

<body class="d-flex flex-column min-vh-100">
  <!-- Include shared navbar -->
  <%- include('../partials/navbar') %>

  <!-- Main container for content -->
  <main class="flex-grow-1 container mt-4 mb-4">

    <!-- Back to home button -->
    <div class="text-start mb-3">
      <a href="/" class="btn btn-outline-secondary">&larr; Back to Home</a>
    </div>

    <!-- Page title -->
    <h1 class="mb-4 text-center fw-bold">Car Inventory</h1>

    <!-- Button to add a new car -->
    <div class="d-flex justify-content-end mb-3">
      <a href="/cars/new" class="btn btn-primary">Add New Car</a>
    </div>

    <!-- Car table -->
    <table class="table table-striped table-hover table-bordered shadow-sm">
      <thead class="table-dark">
        <tr>
          <th>Make</th>
          <th>Model</th>
          <th>Year</th>
          <th>Price/Day</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <!-- Loop through cars from the database -->
        <% cars.forEach(car => { %>
        <tr>
          <td><%= car.make %></td>
          <td><%= car.model %></td>
          <td><%= car.year %></td>
          <td>$<%= car.pricePerDay %></td>
          <td><%= car.status %></td>
          <td>
            <!-- Edit button -->
            <a href="/cars/<%= car._id %>/edit" class="btn btn-sm btn-warning">Edit</a>

            <!-- Delete form with confirmation -->
            <form action="/cars/<%= car._id %>/delete" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-sm btn-danger"
                onclick="return confirm('Are you sure you want to delete this car?')">
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

  <!-- Include shared footer -->
  <%- include('../partials/footer') %>
</body>
</html>




